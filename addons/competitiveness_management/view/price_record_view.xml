<!-- competitiveness_management.price_record -->
<!-- competitiveness_management.price_record -->
<!-- competitiveness_management.price_record -->
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_competitiveness_management_price_record_filter" model="ir.ui.view">
            <field name="name">competitiveness_management.price_record.select</field>
            <field name="model">competitiveness_management.price_record</field>
            <field name="arch" type="xml">
                <search string="Price Records" version="7.0">
                    <group string="By Attribute">
                    <field name="product_id" string="Product"
                            />
                    <field name="commercial_name" string="Commercial Name"
                            />
                    <field name="information_date" string="Price Date"
                            />
                    <field name="usd_price" string="Price (USD)"
                            />
                    <field name="operative_id" string="Operative"
                            />
                    <field name="supplier" string="Supplier"
                            />
                    <field name="invoice_number" string="Invoice Number"
                            />
                    <field name="user" string="User"
                            />
                    <field name="record_date" string="Recorded"
                            />
                    </group>
                    <group string="By object">
                    <field name="price_type_id" string="Price Type"
                            />
                    <field name="price_term_id" string="Term"
                            />
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_competitiveness_management_price_record_form" model="ir.ui.view">
            <field name="name">competitiveness_management.price_record.form</field>
            <field name="model">competitiveness_management.price_record</field>
            <field name="arch" type="xml">
                <form string="Price Records" version="7.0">
                    <header>
                    </header>
                    <sheet string="Price Records">
                     <group>
                        <field name="product_id"
                            />
                        <field name="commercial_name"
                            />
                        <field name="information_date"
                            />
                        <field name="usd_price"
                            />
                        <field name="operative_id"
                            />
                        <field name="supplier"
                            />
                        <field name="invoice_number"
                            />
                        <field name="user"
                            />
                        <field name="record_date"
                            />
                    <field name="price_type_id"
                            />
                    <field name="price_term_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_competitiveness_management_price_record_tree" model="ir.ui.view">
            <field name="name">competitiveness_management.price_record.tree</field>
            <field name="model">competitiveness_management.price_record</field>
            <field name="arch" type="xml">
                <tree string="Price Records"
                    >
                    <field name="product_id"
                        />
                    <field name="commercial_name"
                        />
                    <field name="information_date"
                        />
                    <field name="usd_price"
                        />
                    <field name="operative_id"
                        />
                    <field name="supplier"
                        />
                    <field name="invoice_number"
                        />
                    <field name="price_type_id"
                        />
                    <field name="price_term_id"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
