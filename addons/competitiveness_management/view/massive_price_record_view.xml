<openerp>
    <data>


        <!-- SEARCHVIEW -->
        <record id="view_competitiveness_management_massive_price_record_filter" model="ir.ui.view">
            <field name="name">competitiveness_management.massive_price_record.select</field>
            <field name="model">competitiveness_management.massive_price_record</field>
            <field name="arch" type="xml">
                <search string="Massive Price Record" version="7.0">
                        <field name="information_date"
                            />
                        <field name="operative"
                            />
                        <field name="user"
                            />
                        <field name="record_date"
                            />
                        <field name="product"
                            />
                        <field name="price_type_id"
                            />
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->

        <record id="view_competitiveness_management_massive_price_record_form" model="ir.ui.view">
            <field name="name">competitiveness_management.massive_price_record.form</field>
            <field name="model">competitiveness_management.massive_price_record</field>
            <field name="arch" type="xml">
                <form string="Massive Price Record" version="7.0">
                    <header>
                    </header>
                    <sheet string="Massive Price Record">
                     <group>
                        <field name="information_date"
                            />
                        <field name="operative"
                            />
                        <field name="user"
                            />
                        <field name="record_date"
                            />
                        <field name="product"
                            />
                        <field name="price_record_ids"
                            />
                        <field name="price_type_id"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_competitiveness_management_massive_price_record_tree" model="ir.ui.view">
            <field name="name">competitiveness_management.massive_price_record.tree</field>
            <field name="model">competitiveness_management.massive_price_record</field>
            <field name="arch" type="xml">
                <tree string="Massive Price Record"
                    >
                    <field name="information_date"/>
                    <field name="operative"/>
                    <field name="product"/>
                    <field name="price_type_id"/>
                </tree>
            </field>
        </record>

        <!-- WINDOWACTION -->
        <record id="action_competitiveness_management_massive_price_record_form" model="ir.actions.act_window">
            <field name="name">Massive Price Record</field>
            <field name="res_model">competitiveness_management.massive_price_record</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_competitiveness_management_massive_price_record_filter"/>
            <field name="help">Si cualquiera de los datos de esta vista se completa, entonces se pasa dicho valor por contexto a la tabla "price_record"</field>
        </record>

    </data>
</openerp>
