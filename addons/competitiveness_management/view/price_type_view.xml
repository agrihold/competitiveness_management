<openerp>
    <data>


        <!-- SEARCHVIEW -->
        <record id="view_competitiveness_management_price_type_filter" model="ir.ui.view">
            <field name="name">competitiveness_management.price_type.select</field>
            <field name="model">competitiveness_management.price_type</field>
            <field name="arch" type="xml">
                <search string="Price Types" version="7.0">
                        <field name="name"
                            />
                        <field name="code"
                            />
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->

        <record id="view_competitiveness_management_price_type_form" model="ir.ui.view">
            <field name="name">competitiveness_management.price_type.form</field>
            <field name="model">competitiveness_management.price_type</field>
            <field name="arch" type="xml">
                <form string="Price Types" version="7.0">
                    <header>
                    </header>
                    <sheet string="Price Types">
                     <group>
                        <field name="name"
                            />
                        <field name="code"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_competitiveness_management_price_type_tree" model="ir.ui.view">
            <field name="name">competitiveness_management.price_type.tree</field>
            <field name="model">competitiveness_management.price_type</field>
            <field name="arch" type="xml">
                <tree string="Price Types"
                    >
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <!-- WINDOWACTION -->
        <record id="action_competitiveness_management_price_type_form" model="ir.actions.act_window">
            <field name="name">Price Types</field>
            <field name="res_model">competitiveness_management.price_type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_competitiveness_management_price_type_filter"/>
        </record>

    </data>
</openerp>
